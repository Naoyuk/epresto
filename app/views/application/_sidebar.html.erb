<aside class="w-64" aria-label="Sidebar">
   <div class="overflow-y-auto h-screen px-3 bg-gray-700">
      <ul class="space-y-2 text-lg">
        <% unless user_signed_in? %>
          <li class="mb-4">
            <%= link_to "ePresto", new_user_session_path, class: "text-white display-6 text-decoration-none" %>
          </li>
          <li>
            <%= sidebar_link_to(new_user_session_path, 'Sign in') %>
          </li>
        <% else %>
          <li class="mb-4">
            <%= link_to "ePresto", root_path, class: "text-white display-6 text-decoration-none" %>
          </li>
          <li>
            <%= sidebar_link_to(root_path, 'Purchase Order') %>
          </li>
          <li>
            <%= sidebar_link_to(root_path, 'Invoices') %>
          </li>
          <li>
            <%= sidebar_link_to(items_path, 'Item Info') %>
          </li>
          <li>
            <%= sidebar_link_to(root_path, 'Carton Labels') %>
          </li>
          <li class='pt-6'>
            <%=
              link_to(
                destroy_user_session_path,
                data: { turbo_method: :delete },
                class: 'my-1 py-2 px-4 rounded text-white text-white hover:bg-teal-600'
              ) do
                tag.span { 'Log out' }
              end
            %>
          </li>
        <% end %>
      </ul>
   </div>
</aside>
