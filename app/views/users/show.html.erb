<div class='p-2 mb-2'>
  <div class='p-2'>
    User name: <%= @user.name %>
  </div>

  <div class='p-2'>
    Email: <%= @user.email %>
  </div>

  <div class='p-2'>
    Vendor: <%= @user.vendor.name %>
  </div>

  <div class='p-2'>
    <%= link_to 'Change your password', edit_user_path, class: 'text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-800' %>
  </div>

  <% if current_user.sysadmin? %>
    <div class='p-2'>
      <%= link_to 'Register a new user', new_user_registration_path, class: 'text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-800' %>
    </div>
  <% end %>
</div>
