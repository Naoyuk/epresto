<%= turbo_frame_tag shipto do %>
  <div class='flex border-top'>
    <div class='px-2 w-24 border-r border-b'>
      <span class='inline-block'><%= shipto.location_code %></span>
    </div>
    <div class='px-2 w-72 border-r border-b'>
      <span class='inline-block'><%= shipto.customer_name %></span>
    </div>
    <div class='px-2 w-60 border-r border-b'>
      <span class='inline-block'><%= shipto.address_line1 %></span>
    </div>
    <div class='px-2 w-60 border-r border-b'>
      <span class='inline-block'><%= shipto.address_line2 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.city %></span>
    </div>
    <div class='px-2 w-24 border-r border-b'>
      <span class='inline-block'><%= shipto.province %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.postal_code %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.contact_name1 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.email1 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.phone1 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.contact_name2 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.email2 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.phone2 %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.send_report %></span>
    </div>
    <div class='px-2 w-36 border-r border-b'>
      <span class='inline-block'><%= shipto.visu_email %></span>
    </div>
    <div class='px-2 w-20 border-r border-b'>
      <span class='inline-block py-3'><%= link_to "Edit", edit_shipto_path(shipto), class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-4 border border-blue-500 hover:border-transparent rounded" %></span>
    </div>
  </div>
<% end %>
